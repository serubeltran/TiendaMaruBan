<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Servir robots.txt desde public
  RewriteRule ^robots\.txt$ public/robots.txt [L]
  
  # Servir sitemap.xml desde public
  RewriteRule ^sitemap\.xml$ public/sitemap.xml [L]
  
  # Redirigir a index.html para todas las rutas que no sean archivos/carpetas
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.html [QSA,L]
</IfModule>
